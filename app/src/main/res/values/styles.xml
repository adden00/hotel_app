<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="text">
        <item name="android:fontFamily">@font/selfprodisplay</item>
        <item name="android:textFontWeight" tools:targetApi="p">500</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="rating_text" parent="text">
        <item name="android:textColor">@color/yellow_text</item>
    </style>

    <style name="title_text" parent="text">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="address_text" parent="text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="price_text" parent="text">
        <item name="android:textSize">30sp</item>
        <item name="android:textFontWeight" tools:targetApi="p">600</item>
    </style>

    <style name="price_type_text" parent="text">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textFontWeight" tools:targetApi="p">400</item>
    </style>

    <style name="facilities_descriptions_text" parent="text">
        <item name="android:textFontWeight" tools:targetApi="p">400</item>
    </style>

    <style name="white_text" parent="text">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="facilities_block_text." parent="text">
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="facility_button_main_text." parent="text">
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="facility_button_small_text" parent="text">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="appbar_text" parent="text">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="common_blue_text" parent="text">
        <item name="android:textColor">@color/blue</item>
    </style>


</resources>